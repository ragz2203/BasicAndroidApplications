<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_toast"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ragz.benchmarkapp.ToastActivity">

    <Button
        android:onClick="showToast"
        android:text="TL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btnTL" />

    <Button
        android:onClick="showToast"
        android:text="TC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnTC"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:onClick="showToast"
        android:text="TR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnTR"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:onClick="showToast"
        android:text="CL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCL"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:onClick="showToast"
        android:text="CC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCC"
        android:layout_alignBaseline="@+id/btnCL"
        android:layout_alignBottom="@+id/btnCL"
        android:layout_alignLeft="@+id/btnTC"
        android:layout_alignStart="@+id/btnTC" />

    <Button
        android:onClick="showToast"
        android:text="CR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCR"
        android:layout_alignBaseline="@+id/btnCC"
        android:layout_alignBottom="@+id/btnCC"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:onClick="showToast"
        android:text="BL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnBL"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:onClick="showToast"
        android:text="BC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnBC"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btnCC"
        android:layout_alignStart="@+id/btnCC" />

    <Button
        android:onClick="showToast"
        android:text="BR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnBR"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
